---
export interface Props {
  titulo: string;
}

const { titulo } = Astro.props;
---

<section
  class="
    relative text-white
    mt-16 sm:mt-[72px]
    py-12 sm:py-20 lg:py-24
  "
>
  {/* MASKED BACKGROUND LAYER */}
  <div
    class="
      absolute inset-0 overflow-hidden
      bg-[linear-gradient(#ffffff33_1px,transparent_1px),linear-gradient(90deg,#ffffff33_1px,transparent_1px)]
      bg-size-[25px_25px] bg-[#15052c]
      mask-[linear-gradient(to_bottom,black,black,transparent)]
      -z-10
    "
  ></div>

  {/* CONTENT */}
  <div class="relative max-w-6xl mx-auto px-6 text-center">
    <h1 class="text-3xl sm:text-4xl md:text-6xl font-extrabold mb-4">
      {titulo}
    </h1>
  </div>
</section>
